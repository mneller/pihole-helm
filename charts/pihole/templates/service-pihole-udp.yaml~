apiVersion: v1
kind: Service
metadata:
  name: {{ .Release.Name }}-svc-udp
  namespace: {{ .Values.namespace }}
  annotations:
    metallb.universe.tf/allow-shared-ip: {{ .Values.shared_ip }}
spec:
  selector:
    app: {{ .Values.applabel }}
  ports:
    - port: 80
      targetPort: 80
      protocol: UDP
      name: http
    - port: 53
      targetPort: 53
      protocol: UDP
      name: dns-udp
  type: LoadBalancer
  loadBalancerIP: {{ .Values.shared_ip }}
status:
  loadBalancer:
    ingress:
      - ip: {{ .Values.shared_ip }}
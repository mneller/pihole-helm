apiVersion: v1
kind: Service
metadata:
  name: {{ .Release.Name }}-svc-tcp
  namespace: {{ .Values.namespace }}
  annotations:
      metallb.universe.tf/allow-shared-ip: {{ .Values.shared_ip }}
spec:
  selector:
    app: {{ .Values.applabel }}
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
      name: http
    - port: 443
      targetPort: 443
      protocol: TCP
      name: https
    - port: 53
      targetPort: 53
      protocol: TCP
      name: dns-tcp
  type: LoadBalancer
  loadBalancerIP: {{ .Values.shared_ip }}
status:
  loadBalancer:
    ingress:
      - ip: {{ .Values.shared_ip }}